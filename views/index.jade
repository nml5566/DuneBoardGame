doctype html
html
head
  meta(http-equiv="Content-type" content="text/html" charset="utf-8")
  title Dune
  link(rel="stylesheet" type="text/css" href="css/styles.css" media="screen"
    charset="utf-8")
body
  div#gamecontainer
    canvas(id="gamecanvas" width="768" height="1024" class="gamelayer")
    div(id="gamestartscreen" class="gamelayer")
      img(src="img/icons/play.png" id="playbutton" alt="Play Game")
    div(id="factionselectscreen" class="gamelayer")
      div#factionselectcontainer

    div(id="mapscreen" class="gamelayer")
    div(id="loadingscreen" class="gamelayer")
      div#loadingmessage

  script(src="/js/bundle.js" type="text/javascript" charset="utf-8")
